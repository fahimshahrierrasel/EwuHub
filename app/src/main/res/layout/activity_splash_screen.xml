<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3E55AF"
    android:layout_height="match_parent"
    tools:context="com.treebricks.ewuhub.ui.SplashScreen">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/splash_text"
        android:scaleType="centerCrop"
        android:paddingBottom="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />


    <com.victor.loading.book.BookLoading
        android:id="@+id/bookloading"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="100dp"/>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:src="@drawable/developer_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
